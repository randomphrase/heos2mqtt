{
  "name": "heos2mqtt",
  "version-string": "0.1.0",
  "description": "Service that bridges HEOS CLI output to MQTT.",
  "dependencies": [
    "boost-asio",
    "boost-json",
    "boost-mqtt5",
    "fmt",
    "catch2"
  ],
  "features": {
    "stacktrace-backtrace": {
      "description": "Use boost-stacktrace with libbacktrace support.",
      "dependencies": [
        {
          "name": "boost-stacktrace",
          "features": ["backtrace"]
        }
      ]
    },
    "stacktrace-basic": {
      "description": "Use boost-stacktrace with basic support.",
      "dependencies": [
        {
          "name": "boost-stacktrace",
          "features": ["basic"]
        }
      ]
    }
  },
  "default-features": [
    "stacktrace-backtrace"
  ]
}
