{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-multi",
      "displayName": "Ninja Multi-Config with vcpkg",
      "generator": "Ninja Multi-Config",
      "binaryDir": "build/ninja-multi",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-multi-debug",
      "configurePreset": "ninja-multi",
      "configuration": "Debug"
    },
    {
      "name": "ninja-multi-release",
      "configurePreset": "ninja-multi",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-multi-tests",
      "configurePreset": "ninja-multi",
      "configuration": "Debug",
      "output": {"outputOnFailure": true}
    }
  ]
}
